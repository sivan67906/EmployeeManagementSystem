@model Domain.Viewmodels.ChangePasswordViewModel

@* @{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
} *@


<div class="auth-content">
    <div class="auth-bg">
        <span class="r"></span>
        <span class="r s"></span>
        <span class="r s"></span>
        <span class="r"></span>
    </div>
    <div class="card">
        <div class="card-body text-center">
            <div class="mb-4">
                <i class="feather icon-mail auth-icon"></i>
            </div>
            <h3 class="mb-4">Reset Password</h3>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group mb-3">
                    <input asp-for="CurrentPassword" class="form-control" placeholder="Current Password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="btn btn-primary mb-4 shadow-2">Change Password</button>
            </form>
        </div>
    </div>
</div>


