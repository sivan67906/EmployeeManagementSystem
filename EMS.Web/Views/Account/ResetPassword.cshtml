@model Domain.Viewmodels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="auth-content">
    <div class="auth-bg">
        <span class="r"></span>
        <span class="r s"></span>
        <span class="r s"></span>
        <span class="r"></span>
    </div>
    <div class="card">
        <div class="card-body text-center">
            <div class="mb-4">
                <i class="feather icon-mail auth-icon"></i>
            </div>
            <h3 class="mb-4">Reset Password</h3>
            <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Token" type="hidden" />
            <input asp-for="Email" type="hidden" />
            <div class="input-group mb-3">
                @* <label asp-for="Password"></label> *@
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="btn btn-primary mb-4 shadow-2">Reset Password</button>
            </form>
            <p class="mb-0 text-muted">Don’t have an account? <a asp-action="Register">Signup</a></p>
        </div>
    </div>
</div>


