@model IEnumerable<Domain.Viewmodel.EmployeeViewmodel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12">
    <div class="card">
        <div class="card-header">
            <h5>Employee List</h5>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                FirstName
                            </th>
                            <th>LastName</th>
                            <th>Gender</th>
                            <th>DOB</th>
                            <th>Employee Type</th>
                            <th>CommunicationAddress</th>
                            <th>PermanentAddress</th>
                            <th>Email</th>
                            <th>PhoneNo</th>
                            <th>DepartmentName</th>
                            <th>UserName</th>
                            <th>Authentication Name</th>
                            <th>RoleName</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>@obj.FirstName</td>
                                <td>@obj.LastName</td>
                                <td>@obj.Gndr</td>
                                <td>@obj.DateofBirth</td>
                                <td>@obj.EmpTypeName</td>
                                <td>@obj.CommunicationAddress</td>
                                <td>@obj.PermanentAddress</td>
                                <td>@obj.Email</td>
                                <td>@obj.PhoneNo</td>
                                <td>@obj.DepartmentName</td>
                                <td>@obj.UserName</td>
                                <td>@obj.AuthenticationName</td>
                                <td>@obj.EmpRole</td>
                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@obj.Id"
                                           class="btn btn-success mx-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@obj.Id"
                                           class="btn btn-danger mx-2">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
