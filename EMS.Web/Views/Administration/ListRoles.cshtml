@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<div class="col-xl-12">
    <h5 class="mt-4">All Roles</h5>
    <hr>
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="administration">Add new role</a>
    @* <div class="card-columns"> *@


        @if (Model.Any())
        {


            foreach (var role in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        Role Id : @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name</h5>
                    </div>
                <div class="card-footer" style="display: flex;">
                        <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    <form method="post" asp-controller="Administration" asp-action="DeleteRole" asp-route-id="@role.Id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user : @role.Name')">Delete</button>
                    </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="Administration" asp-action="CreateRole">
                        Create Role
                    </a>
                </div>
            </div>
        }
    @* </div> *@
</div>


